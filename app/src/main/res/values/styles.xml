<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <!--        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>-->
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:padding">@dimen/dp14</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/color_hint</item>>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="title_page_style">
        <item name="fontFamily">@font/app_font_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetDialogRoundTheme</item>
    </style>

    <style name="CustomBottomSheetDialogRoundTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="second_body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8D8D8D</item>
        <item name="fontFamily">@font/app_font_regular</item>
    </style>

    <style name="error_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
    </style>

    <style name="product_name_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>

    <style name="h2_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>


    <style name="h3_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>


    <style name="special_price_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>

    <style name="regular_price_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/regular_price_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
    </style>

    <style name="product_name_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
    </style>

    <style name="special_price_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
    </style>

    <style name="special_price_hightlight_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/app_font_medium</item>
    </style>

    <style name="regular_price_detail_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/regular_price_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
    </style>

    <style name="category_name_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
    </style>

    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>

    <style name="text_button_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_text_button</item>
    </style>


    <style name="edittext_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/app_font_regular</item>
        <item name="android:background">@drawable/background_edittext_normal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>