<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/image_product"
                tools:text="HEHEHE" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_product_name"
                tools:text="10.000đ" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_rating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_product_price"
                app:srcCompat="@drawable/baseline_star_rate_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/image_rating"
                app:layout_constraintStart_toEndOf="@id/image_rating"
                app:layout_constraintTop_toTopOf="@id/image_rating"
                tools:text="4.4" />

            <View
                android:id="@+id/view_divide_1"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="5dp"
                android:background="@color/black"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toBottomOf="@id/image_rating"
                app:layout_constraintStart_toEndOf="@id/text_rating"
                app:layout_constraintTop_toTopOf="@id/image_rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_sold_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/text_rating"
                app:layout_constraintStart_toEndOf="@id/view_divide_1"
                app:layout_constraintTop_toTopOf="@id/text_rating"
                tools:text="Đã bán 450" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>