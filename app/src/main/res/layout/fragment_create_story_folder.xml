<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        tools:context=".ui.story.create_story_folder.CreateStoryFolderFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_create_story_folder_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Tạo thư mục story"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/text_create_story_folder_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_create_story_folder_title"
            app:srcCompat="@drawable/ic_close_dialog" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_folder"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/text_create_story_folder_title"
            app:srcCompat="@drawable/ic_add_chat_photo" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edittext_find_transaction"
            android:hint="Nhập tên thư mục"
            android:paddingVertical="18dp"
            android:paddingStart="12dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/greyLight"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/image_folder" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_create_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_button"
            android:paddingVertical="18dp"
            android:text="Tạo thư mục"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/input_folder_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>