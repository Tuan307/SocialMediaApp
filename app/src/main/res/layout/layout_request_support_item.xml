<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp4"
        android:background="@drawable/bg_edittext_unfocus_12dp"
        android:padding="@dimen/dp20">

        <TextView
            android:id="@+id/tv_request_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp8"
            app:drawableEndCompat="@drawable/ic_login_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_request_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_body_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_code" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_body_text"
            android:textSize="@dimen/sp12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_detail" />


        <TextView
            android:id="@+id/tv_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:drawablePadding="@dimen/dp4"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/str_processing"
            android:textColor="@color/color_yellow"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_refresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_detail" />

        <TextView
            android:id="@+id/tv_processed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:drawablePadding="@dimen/dp4"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/str_processed"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12"
            app:drawableStartCompat="@drawable/ic_processed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_detail" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>