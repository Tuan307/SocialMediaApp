<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/dp6"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_group_screen_title_bg"
            android:paddingHorizontal="@dimen/dp6"
            android:paddingVertical="@dimen/dp3"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Dành cho bạn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>